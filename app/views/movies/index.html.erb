<h1><%= pluralize(@movies.size, 'Movie')%></h1>

<%= link_to "Add New Movie", new_movie_path %>

<% @movies.each do |movie| %>
  <article id="movie_title">
    <header>
      <%= image_for(movie) %>
      <h2><%= link_to movie.title, movie %></h2>
    </header>
    <p>
      <%= truncate(movie.description, length: 50, separator: ' ') %>
    </p>
    <table>
      <tr>
        <th>Released: </th>
        <td><%= movie.released_on %>  (<%= time_ago_in_words(movie.released_on) %> ago)</td>
      </tr>

      <tr>
        <th>Rating: </th>
        <td><%= movie.rating %></td>
      </tr>

      <tr>
        <th>Cast: </th>
        <td><%= movie.cast %></td>
      </tr>

      <tr>
        <th>Duration: </th>
        <td><%= movie.duration %></td>
      </tr>

    </table>
  </article>
<% end %>
